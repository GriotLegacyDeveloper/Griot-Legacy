<% layout('layout/afterlogin') -%>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">

    <!-- Navbar -->
    <% include ../layout/navbar %>

    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <% include ../layout/sidebar %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Edit Advertsement - <%= adData.title%></h1>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <!-- left column -->
            <div class="col-md-12">
              <!-- jquery validation -->
              <div class="card card-primary">

                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" id="advertisement" method="post" action="/content/editAdvertisement?id=<%=adData._id%>" enctype="multipart/form-data">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Title</label>
                      <input type="text" name="title" class="form-control" id="exampleInputEmail1"
                        placeholder="Enter Title" value="<%= adData.title%>">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Link</label>
                        <input type="url" name="link" class="form-control" id="exampleInputEmail1"
                          placeholder="Enter Link" value="<%= adData.link%>" >
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Valid From</label>
                        <input style="margin-left: 10px;" type="date" name="validFrom" class="form-control" id="exampleInputEmail1"  value="<%= adData.trimmedValidFrom%>" >
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Valid Till</label>
                        <input style="margin-left: 23px;" type="date" name="validTill" class="form-control" id="exampleInputEmail1" value="<%= adData.trimmedValidTill%>" >
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Upload Image</label> <a href="<%= adData.image %>" target="_blank"><i
                          style="color: green;cursor: pointer;" class="fa fa-eye" title="Click to View Full"
                          aria-hidden="true"></i></a>
                        <input type="file" name="image" class="form-control" id="exampleInputEmail1" >
                      </div>
                  </div>

                  <!-- /.card-body -->
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    
                  </div>
                </form>
              <!-- /.card -->
            </div>
            <!--/.col (left) -->
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <% include ../layout/footer %>

  </div>
  <!-- ./wrapper -->


  <!-- jQuery -->
  <script src="../../plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../../js/bootstrap-notify.min.js"></script>
  <!-- jquery-validation -->
  <script src="../../plugins/jquery-validation/jquery.validate.min.js"></script>
  <script src="../../plugins/jquery-validation/additional-methods.min.js"></script>
  <!-- AdminLTE App -->
  <script src="../../js/adminlte.min.js"></script>


</body> 